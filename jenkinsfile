def tomcatServerUrl = "http://172.31.53.149"
pipeline {
  agent {
    node {
      label 'jenkins-slave'
    }
  }

  stages {
    //Use this code for inline pipeline script option
    /* stage('Code checkout') {
      steps {
        //download code from github
        git 'https://github.com/willyhappy/cicd-java-maven.git'
      }
    }*/
    stage('Build') {
      steps {
        // Run the maven build
        sh '"mvn" -Dmaven.test.failure.ignore clean install'
      }
    }
    stage('Deploy') {
      steps {
        //deploy war on tomcat server
        deploy adapters: [tomcat9(url: "${tomcatServerUrl}",
            credentialsId: 'tomcat-credential')],
          war: 'target/*.war',
          contextPath: 'cicd-java-maven-pipeline'

      }
    }
  }
}
